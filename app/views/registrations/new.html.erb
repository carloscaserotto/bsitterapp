<h1>Sign Up as a User</h1>
<%= form_with model: @user, url: sign_up_path do |f| %>
  <p>
  <%= f.label 'email' %><br>
  <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :header_image %>
    <%= f.file_field :header_image %>
  </p>
  <p>
  <%= f.label 'password' %><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label 'password_confirmation' %><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.submit 'Create an user' %>
  </p>
<% end %>
<%= link_to 'Cancel and go Home', root_path %>
