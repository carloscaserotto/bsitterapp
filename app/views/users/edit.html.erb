<h1>Edit an User</h1>
<%= form_with model: @user do |f| %>
  <p>
  <%= f.label 'email' %><br>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label 'password' %><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label 'password_confirmation' %><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.submit 'Confirm changes' %>
  </p>
<% end %>

<%= link_to 'Cancel and go Home', root_path %>